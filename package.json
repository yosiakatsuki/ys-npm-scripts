{
  "name": "ys-npm-scripts",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build:scss": "node-sass src/sass -o src/css",
    "build:postcss": "postcss src/css/*.css -u autoprefixer postcss-clean -d css --no-map",
    "build:cssrename": "rename -f './css/!(*.min.css)' {{f}}.min.css",
    "build": "npm run build:scss && npm run build:postcss && npm run build:cssrename",
    "watch:cssrename": "watch 'npm run build:cssrename' ./css --wait=0.5",
    "watch:scss": "watch 'npm run build:scss' ./src/sass/",
    "watch:postcss": "postcss src/css/*.css -u autoprefixer postcss-clean -d css --no-map -w",
    "watch": "watch 'npm run build' ./src/sass/",
    "server": "browser-sync start -s ./ --files 'css/*.min.css, js/*.min.js, **/*.php, **/*.html' -w",
    "watch_s": "npm run watch & npm run server"
  },
  "author": "yosiakatsuki",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^9.4.2",
    "browser-sync": "^2.26.3",
    "node-sass": "^4.11.0",
    "postcss-clean": "^1.1.0",
    "postcss-cli": "^6.0.1",
    "rename-cli": "^5.1.2",
    "watch": "^1.0.2"
  },
  "browserslist": [
    "last 2 versions",
    "not ie < 11"
  ]
}
