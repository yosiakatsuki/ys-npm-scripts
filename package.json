{
  "name": "ys-npm-scripts",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build:scss": "node-sass src/sass -o src/css",
    "build:postcss": "postcss src/css/*.css -u autoprefixer postcss-clean -d css --no-map",
    "build:cssrename": "rename -f './css/!(*.min.css)' {{f}}.min.css",
    "build:css": "npm run build:scss && npm run build:postcss && npm run build:cssrename",
    "build:js": "babel ./src/js -d ./js --presets=env --compact=true",
    "build:js-dev": "babel ./src/js -d ./js --presets=env --compact=true --source-maps",
    "watch:css": "watch 'npm run build:css' ./src/sass/",
    "watch:js": "watch 'npm run build:js' ./src/js/",
    "watch:js-dev": "watch 'npm run build:js-dev' ./src/js/",
    "watch": "npm run watch:css & npm run watch:js",
    "watch-dev": "npm run watch:css & npm run watch:js-dev",
    "bs": "browser-sync start -s ./ --files 'css/*.css, js/*.js, **/*.php, **/*.html' -w",
    "watch_s": "npm run watch & npm run bs"
  },
  "author": "yosiakatsuki",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^9.4.2",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "browser-sync": "^2.26.3",
    "node-sass": "^4.11.0",
    "postcss-clean": "^1.1.0",
    "postcss-cli": "^6.0.1",
    "rename-cli": "^5.1.2",
    "watch": "^1.0.2"
  },
  "browserslist": [
    "last 2 versions",
    "not ie < 11"
  ]
}
